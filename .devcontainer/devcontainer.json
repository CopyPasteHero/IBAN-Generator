{
	"name": "IBAN Generator Development",
	"image": "mcr.microsoft.com/devcontainers/javascript-node:18",
	"features": {},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.vscode-eslint",
				"esbenp.prettier-vscode",
				"ritwickdey.LiveServer",
				"formulahendry.auto-rename-tag",
				"bradlc.vscode-tailwindcss",
				"ms-vscode.vscode-json"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.codeActionsOnSave": {
					"source.fixAll.eslint": "explicit"
				},
				"liveServer.settings.donotShowInfoMsg": true,
				"liveServer.settings.donotVerifyTags": true,
				"liveServer.settings.port": 5000,
				"files.associations": {
					"*.html": "html",
					"*.css": "css",
					"*.js": "javascript"
				}
			}
		}
	},
	"forwardPorts": [3000, 5000, 8080],
	"portsAttributes": {
		"3000": {
			"label": "Development Server",
			"onAutoForward": "notify"
		},
		"5000": {
			"label": "Live Server",
			"onAutoForward": "openPreview"
		},
		"8080": {
			"label": "Alternative Server",
			"onAutoForward": "notify"
		}
	},
	"postCreateCommand": "if [ -f package.json ]; then npm install; fi",
	"remoteUser": "node",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached"
	]
}