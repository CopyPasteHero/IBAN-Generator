{
  "name": "iban-generator",
  "version": "1.0.0",
  "description": "A fully client-side IBAN generator to create mathematically valid IBANs for multiple European countries",
  "type": "module",
  "main": "iban/script.js",
  "scripts": {
    "lint": "eslint iban/*.js",
    "lint:fix": "eslint iban/*.js --fix",
    "format": "prettier --write \"**/*.{js,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,md}\"",
    "validate": "npm run lint && npm run format:check",
    "serve": "npx http-server . -p 8080 -o"
  },
  "keywords": [
    "iban",
    "generator",
    "banking",
    "validation",
    "testing"
  ],
  "author": "CopyPasteHero",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CopyPasteHero/IBAN-Generator.git"
  },
  "bugs": {
    "url": "https://github.com/CopyPasteHero/IBAN-Generator/issues"
  },
  "homepage": "https://probeer.me/iban",
  "devDependencies": {
    "eslint": "^9.39.1",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
